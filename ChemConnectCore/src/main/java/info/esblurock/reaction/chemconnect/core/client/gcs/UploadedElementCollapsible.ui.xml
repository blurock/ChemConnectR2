<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client">

	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.panel {
		font-family: monospace;
		color: black;
		background: white;
	}
	</ui:style>
	<m:MaterialCollapsibleItem>
		<m:MaterialCollapsibleHeader
			backgroundColor="GREY">
			<m:MaterialLink ui:field="type" textColor="BLACK" />
			<m:MaterialTooltip ui:field="identifiertooltip">
			<m:MaterialLink ui:field="path" text="Image"
				textColor="BLACK" />
				</m:MaterialTooltip>
			<m:MaterialLink ui:field="delete" iconType="CLOSE"
				iconPosition="RIGHT" />
		</m:MaterialCollapsibleHeader>
		<m:MaterialCollapsibleBody>
			<m:MaterialRow>
				<m:MaterialColumn grid="s12">
					<g:HTMLPanel ui:field="imagepanel" />
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn grid="s12">
				<m:MaterialLink ui:field="url" textColor="BLACK"/>
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn grid="s12">
					<m:MaterialTextArea ui:field="textDescription"
						placeholder="Description" styleName="{style.panel}" />
				</m:MaterialColumn>
			</m:MaterialRow>
		</m:MaterialCollapsibleBody>
	</m:MaterialCollapsibleItem>
</ui:UiBinder> 