<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client.splitpanel">
	<ui:style gss="true">
	body {
		background: #e9e9e9;
	}
	</ui:style>
	<m:MaterialPanel>
	<m:MaterialPanel ui:field="modalpanel"/>	
		<m:MaterialRow ui:field="tabRow">
			<m:MaterialColumn grid="s12">
				<m:MaterialTab ui:field="tab" indicatorColor="YELLOW"
					shadow="1">
					<m:MaterialTabItem waves="YELLOW">
						<m:MaterialLink text="Knowledge Concepts" href="#tab1"
							textColor="BLACK" />
					</m:MaterialTabItem>
					<m:MaterialTabItem waves="YELLOW">
						<m:MaterialLink text="Device Parameters" href="#tab2"
							textColor="BLACK" />
					</m:MaterialTabItem>
				</m:MaterialTab>
			</m:MaterialColumn>
			<m:MaterialColumn m:id="tab1" grid="s12">
				<m:MaterialPanel backgroundColor="GREY_LIGHTEN_2">
					<m:MaterialRow>
						<m:MaterialColumn grid="s3">
							<m:MaterialPanel grid="l6 m6 s6" width="100%"
								height="500px" padding="0" backgroundColor="GREY_LIGHTEN_2">
								<m:MaterialCollection header="Knowledge Organization" width="100%"
									active="2">
									<m:MaterialCollectionItem>
										<m:MaterialLink ui:field="deviceConcepts" text="Device" />
									</m:MaterialCollectionItem>
									<m:MaterialCollectionItem>
										<m:MaterialLink ui:field="subsystemConcepts" text="Subsystems" />
									</m:MaterialCollectionItem>
									<m:MaterialCollectionItem>
										<m:MaterialLink ui:field="componentConcepts" text="Components" />
									</m:MaterialCollectionItem>
									<m:MaterialCollectionItem>
										<m:MaterialLink ui:field="methodologyConcepts" text="Methodologies" />
									</m:MaterialCollectionItem>
									<m:MaterialCollectionItem>
										<m:MaterialLink ui:field="parameterConcepts" text="Parameters" />
									</m:MaterialCollectionItem>
								</m:MaterialCollection>
							</m:MaterialPanel>
						</m:MaterialColumn>
						<m:MaterialColumn grid="s9">
							<g:ScrollPanel ui:field="conceptPanel" width="100%"
								height="500px">
							</g:ScrollPanel>
						</m:MaterialColumn>
					</m:MaterialRow>
				</m:MaterialPanel>
			</m:MaterialColumn>
			<m:MaterialColumn m:id="tab2" grid="s12">
				<m:MaterialPanel height="500px" backgroundColor="ORANGE">
					<m:MaterialRow>
						<m:MaterialColumn grid="s3">
							<m:MaterialPanel grid="l6 m6 s6" width="100%"
								height="200px" padding="0" backgroundColor="GREY_LIGHTEN_2">
								<m:MaterialTitle title="Title 3" />
							</m:MaterialPanel>
						</m:MaterialColumn>
						<m:MaterialColumn grid="s9">
							<m:MaterialPanel grid="l6 m6 s6" width="100%"
								height="200px" padding="0" backgroundColor="GREY_LIGHTEN_5">
								<m:MaterialTitle title="Title 4" />
							</m:MaterialPanel>
						</m:MaterialColumn>
					</m:MaterialRow>
				</m:MaterialPanel>
			</m:MaterialColumn>
		</m:MaterialRow>
	</m:MaterialPanel>
</ui:UiBinder> 