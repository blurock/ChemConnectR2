<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client.splitpanel">
	<ui:style gss="true">
	body {
		background: #e9e9e9;
	}
	</ui:style>
	<m:MaterialPanel>
		<m:MaterialPanel ui:field="modalpanel" />
		<m:MaterialRow ui:field="tabRow">
			<m:MaterialColumn grid="s12">
				<m:MaterialTab ui:field="tab" indicatorColor="YELLOW"
					shadow="1">
					<m:MaterialTabItem waves="YELLOW">
						<m:MaterialLink text="Knowledge Concepts" href="#tab1"
							textColor="BLACK" />
					</m:MaterialTabItem>
					<m:MaterialTabItem waves="YELLOW">
						<m:MaterialLink text="Device Parameters" href="#tab2"
							textColor="BLACK" />
					</m:MaterialTabItem>
				</m:MaterialTab>
			</m:MaterialColumn>
			<m:MaterialColumn m:id="tab1" grid="s12">
				<m:MaterialPanel backgroundColor="GREY_LIGHTEN_2">
					<m:MaterialRow>
						<m:MaterialColumn grid="s12">
							<m:MaterialPanel ui:field="parameters" grid="l6 m6 s6"
								width="100%" height="500px" padding="0" backgroundColor="GREY_LIGHTEN_2">
								<m:MaterialCollapsible ui:field="conceptcollapse">
									<m:MaterialCollapsibleItem>
										<m:MaterialCollapsibleHeader>
											<m:MaterialLabel ui:field="title" text="Concepts" />
										</m:MaterialCollapsibleHeader>
										<m:MaterialCollapsibleBody>
											<m:MaterialCollapsible ui:field="collapsiblebody" />
										</m:MaterialCollapsibleBody>
									</m:MaterialCollapsibleItem>
								</m:MaterialCollapsible>
							</m:MaterialPanel>

						</m:MaterialColumn>
					</m:MaterialRow>
					<m:MaterialRow>
						<m:MaterialColumn grid="s12">
							<g:ScrollPanel ui:field="conceptPanel" width="100%"
								height="500px">
							</g:ScrollPanel>
						</m:MaterialColumn>
					</m:MaterialRow>
				</m:MaterialPanel>
			</m:MaterialColumn>
			<m:MaterialColumn m:id="tab2" grid="s12">
				<m:MaterialPanel height="500px" backgroundColor="ORANGE">
					<m:MaterialRow>
						<m:MaterialColumn grid="s3">
							<m:MaterialPanel grid="l6 m6 s6" width="100%"
								height="200px" padding="0" backgroundColor="GREY_LIGHTEN_2">
								<m:MaterialTitle title="Title 3" />
							</m:MaterialPanel>
						</m:MaterialColumn>
						<m:MaterialColumn grid="s9">
							<m:MaterialPanel grid="l6 m6 s6" width="100%"
								height="200px" padding="0" backgroundColor="GREY_LIGHTEN_5">
								<m:MaterialTitle title="Title 4" />
							</m:MaterialPanel>
						</m:MaterialColumn>
					</m:MaterialRow>
				</m:MaterialPanel>
			</m:MaterialColumn>
		</m:MaterialRow>
	</m:MaterialPanel>
</ui:UiBinder> 