<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	.box {
		background-color: #bdbdbd;
		border: 3px solid #607d8b;
		margin: 0px;
	}
	.rowbox {
		background-color: #cfd8dc;
		border: 1px solid #607d8b;
		width: 95%;
	}
	</ui:style>
	<m:MaterialPanel  styleName="{style.box}">
	<m:MaterialRow  margin="0">
		<m:MaterialColumn grid="s12" styleName="{style.rowbox}">
			<m:MaterialTooltip ui:field="addresstooltip">
				<m:MaterialLink ui:field="address" textColor="BLACK"  padding="0" paddingTop="0" paddingBottom="0"/>
			</m:MaterialTooltip>
		</m:MaterialColumn>
	</m:MaterialRow >
	<m:MaterialRow  margin="0">
		<m:MaterialColumn grid="s4" styleName="{style.rowbox}">
			<m:MaterialTooltip ui:field="citytooltip">
				<m:MaterialLink ui:field="city" textColor="BLACK"  padding="0" paddingTop="0" paddingBottom="0"/>
			</m:MaterialTooltip>
		</m:MaterialColumn>
		<m:MaterialColumn grid="s4" styleName="{style.rowbox}">
			<m:MaterialTooltip ui:field="countrytooltip">
				<m:MaterialLink ui:field="country" textColor="BLACK"  padding="0" paddingTop="0" paddingBottom="0"/>
			</m:MaterialTooltip>
		</m:MaterialColumn>
		<m:MaterialColumn grid="s4" styleName="{style.rowbox}">
			<m:MaterialTooltip ui:field="postcodetooltip">
				<m:MaterialLink ui:field="postcode" textColor="BLACK"  padding="0" paddingTop="0" paddingBottom="0"/>
			</m:MaterialTooltip>
		</m:MaterialColumn>
	</m:MaterialRow>
</m:MaterialPanel>
</ui:UiBinder> 